const Web3 = require('web3');
const web3 = new Web3('https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID');

// Dirección del contrato del NFT
const contractAddress = 'DIRECCION_DEL_CONTRATO_NFT';
// ABI del contrato ERC-721
const abi = [
  {
    "constant": true,
    "inputs": [
      {
        "name": "_owner",
        "type": "address"
      },
      {
        "name": "_tokenId",
        "type": "uint256"
      }
    ],
    "name": "ownerOf",
    "outputs": [
      {
        "name": "",
        "type": "address"
      }
    ],
    "payable": false,
    "stateMutability": "view",
    "type": "function"
  }
];

// Crear una instancia del contrato
const contract = new web3.eth.Contract(abi, contractAddress);

// Dirección de la cuenta y ID del token NFT
const accountAddress = 'DIRECCION_DE_LA_CUENTA';
const tokenId = 'ID_DEL_TOKEN';

async function checkOwnership() {
  try {
    const owner = await contract.methods.ownerOf(tokenId).call();
    if (owner.toLowerCase() === accountAddress.toLowerCase()) {
      console.log('La cuenta es propietaria del NFT.');
    } else {
      console.log('La cuenta no es propietaria del NFT.');
    }
  } catch (error) {
    console.error('Error al verificar la propiedad:', error);
  }
}

checkOwnership();
